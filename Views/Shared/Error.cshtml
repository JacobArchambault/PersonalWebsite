@{
    ViewData["Title"] = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Error</h2>
<strong>@Context.Response.StatusCode:
    @Microsoft.AspNetCore.WebUtilities.ReasonPhrases.GetReasonPhrase(Context.Response.StatusCode)</strong>
<figure>
    <figcaption>In the meantime, here's a song about the wonders of fiber optic network communication.</figcaption>
    <picture>
      <source type="image/avif" srcset="~/images/fiber-optic.avif" />
      <img src="~/images/fiber-optic.jpg" alt="Glowing fiber optic cables" />
    </picture>
    <audio controls="controls">
        <source src="~/media/ultralight-beam.mp3" type="audio/mpeg" />
    </audio>
</figure>
